{
  "name": "app-prueba-seguridad",
  "version": "1.0.0",
  "description": "Aplicación web segura con autenticación JWT y OAuth 2.0",
  "main": "src/backend/server.js",
  "scripts": {
    "dev": "nodemon src/backend/server.js",
    "start": "node src/backend/server.js",
    "test": "jest",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "test:e2e": "start-server-and-test dev http://localhost:3000 cypress:run",
    "test:e2e:open": "start-server-and-test dev http://localhost:3000 cypress:open",
    "kill-port": "npx kill-port 3000",
    "dev:clean": "npx kill-port 3000 && npm run dev",
    "setup": "npm install && npm run kill-port"
  },
  "keywords": [
    "nodejs",
    "express",
    "jwt",
    "oauth",
    "authentication",
    "security",
    "google-oauth",
    "passport"
  ],
  "author": "Tu Nombre",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.18.1",
    "jsonwebtoken": "^9.0.2",
    "passport": "^0.6.0",
    "passport-google-oauth20": "^2.0.0"
  },
  "devDependencies": {
    "cypress": "^13.6.0",
    "kill-port": "^2.0.1",
    "nodemon": "^3.0.1",
    "start-server-and-test": "^2.0.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
