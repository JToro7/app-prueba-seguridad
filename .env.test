# .env.test - Variables de entorno espec√≠ficas para testing

# Entorno
NODE_ENV=test

# JWT Configuration
JWT_SECRET=test-jwt-secret-for-jest-testing-super-secure-key
SESSION_SECRET=test-session-secret-for-jest-testing

# Server Configuration
PORT=0
CORS_ORIGIN=http://localhost:3000

# OAuth Configuration (para tests - usar credenciales de test)
GOOGLE_CLIENT_ID=test-google-client-id-for-testing
GOOGLE_CLIENT_SECRET=test-google-client-secret-for-testing
GOOGLE_PROJECT_ID=test-project-id
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# Database (si usas una base de datos real en tests)
DATABASE_URL=sqlite::memory:
MONGODB_URI=mongodb://localhost:27017/test-app-prueba-seguridad

# Logging
LOG_LEVEL=error

# URLs para tests E2E
PRODUCTION_URL=http://localhost:3000

# Test-specific flags
DISABLE_LOGGING=true
MOCK_EXTERNAL_APIS=true